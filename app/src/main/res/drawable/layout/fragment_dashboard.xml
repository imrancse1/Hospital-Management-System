                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="Mosques"
                    android:fontFamily="@font/heartwarming"/>

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="140dp"
            android:layout_height="140dp"
