<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/gradient_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:padding="10dp"
                android:id="@+id/userProfileFullNameTvId"
                android:gravity="center"
                android:text="Name"
                android:textSize="15dp"
                android:fontFamily="@font/heartwarming"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:padding="10dp"
                android:id="@+id/userProfilePhoneNumberTvId"
                android:gravity="center"
                android:text="Phone Number"
                android:textSize="15dp"
                android:fontFamily="@font/heartwarming"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:padding="10dp"
                android:id="@+id/userProfileOccupationTvId"
                android:gravity="center"
                android:text="Occupation"
                android:textSize="15dp"
                android:fontFamily="@font/heartwarming"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:padding="10dp"
                android:id="@+id/userProfileDateOfBirthTvId"
                android:gravity="center"
                android:text="Date of Birth"
                android:textSize="15dp"
                android:fontFamily="@font/heartwarming"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:padding="10dp"
                android:id="@+id/userProfileAddressTvId"
                android:gravity="center"
                android:text="Address"
                android:textSize="15dp"
                android:fontFamily="@font/heartwarming"/>

        </LinearLayout>

    </LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_margin="@dimen/fab_margin"
        android:src="@drawable/add_profile_icon"
        android:backgroundTint="@color/colorPrimaryDark"/>

</RelativeLayout>