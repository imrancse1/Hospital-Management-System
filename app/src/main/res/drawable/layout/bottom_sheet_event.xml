<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/gradient_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/travelDestinationEtId"
            android:layout_margin="5dp"
            android:background="@drawable/gradient_edittext_background"
            android:drawableLeft="@drawable/ic_place_white_24dp"
            android:hint=" Enter your travel destination"
            android:inputType="text"
            android:textSize="13sp"
            android:textColor="@color/textColor"
            android:fontFamily="@font/heartwarming"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/travelEstimatedBudgetEtId"
            android:layout_margin="5dp"
            android:layout_weight=".5"
            android:background="@drawable/gradient_edittext_background"
            android:drawableLeft="@drawable/ic_attach_money_white_24dp"
            android:hint=" Enter your estimated budget"
            android:inputType="numberDecimal"
            android:textSize="13sp"
            android:textColor="@color/textColor"
            android:fontFamily="@font/heartwarming"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/travelStartingDateEtId"
            android:layout_margin="5dp"
            android:layout_weight=".5"
            android:background="@drawable/gradient_edittext_background"
            android:drawableLeft="@drawable/ic_date_range_white_24dp"
            android:hint=" Enter your travel starting date"
            android:inputType="datetime"
            android:textSize="13sp"
            android:textColor="@color/textColor"
            android:fontFamily="@font/heartwarming"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/travelEndingDateEtId"
            android:layout_margin="5dp"
            android:layout_weight=".5"
            android:background="@drawable/gradient_edittext_background"
            android:drawableLeft="@drawable/ic_date_range_white_24dp"
            android:hint=" Enter your travel ending date"
            android:inputType="datetime"
            android:textSize="13sp"
            android:textColor="@color/textColor"
            android:fontFamily="@font/heartwarming"/>


        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/createEventBtnId"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/button_background"
            android:text="Create event"
            android:textColor="@color/buttonTextColor"
            android:textAllCaps="false"/>

    </LinearLayout>

</RelativeLayout>