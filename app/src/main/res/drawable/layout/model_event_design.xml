<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/eventShowCardViewId"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        app:cardElevation="20dp"
        app:cardCornerRadius="10dp"
        app:cardPreventCornerOverlap="true"
        app:cardBackgroundColor="@color/colorPrimary">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/showTravelDestinationTvId"
                android:gravity="center"
                android:text="Location"
                android:textSize="13sp"
                android:textColor="@color/textColor"
                android:fontFamily="@font/heartwarming"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="3dp"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="From:"
                    android:textSize="13sp"
                    android:textColor="@color/textColor"
                    android:fontFamily="@font/heartwarming"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/showTravelStartingDateTvId"
                    android:layout_marginRight="24dp"
                    android:layout_weight=".9"
                    android:gravity="left"
                    android:text="Start Date"
                    android:textSize="13sp"
                    android:textColor="@color/textColor"
                    android:fontFamily="@font/heartwarming"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="3dp"
                    android:layout_marginLeft="24dp"
                    android:layout_weight="1."
                    android:gravity="right"
                    android:text="To:"
                    android:textSize="13sp"
                    android:textColor="@color/textColor"
                    android:fontFamily="@font/heartwarming"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/showTravelEndingDateTvId"
                    android:layout_weight=".9"
                    android:gravity="left"
                    android:text="End Date"
                    android:textSize="13sp"
                    android:textColor="@color/textColor"
                    android:fontFamily="@font/heartwarming"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight=".8"
                    android:gravity="right"
                    android:text="Total Budget:"
                    android:textSize="13sp"
                    android:textColor="@color/textColor"
                    android:fontFamily="@font/heartwarming"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/showTravelEstimatedBudgetTvId"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Budget"
                    android:textSize="13sp"
                    android:textColor="@color/textColor"
                    android:fontFamily="@font/heartwarming"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight=".8"
                    android:gravity="left"
                    android:text="Tk"
                    android:textSize="13sp"
                    android:textColor="@color/textColor"
                    android:fontFamily="@font/heartwarming"/>

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>