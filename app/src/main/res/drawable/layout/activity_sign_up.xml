<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    tools:context=".Activity.SignUpActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="Sign up"
        android:textColor="@color/tourMateTextColor"
        android:fontFamily="@font/homademcracken"
        android:textSize="20sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:cardCornerRadius="5dp"
            app:cardElevation="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/splash_screen_image"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Email"
                        android:textSize="13sp"
                        android:textColor="@color/textColor"
                        android:fontFamily="@font/heartwarming"/>

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:id="@+id/signUpEmailEtId"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/gradient_edittext_background"
                        android:hint=" Enter an email"
                        android:drawableLeft="@drawable/ic_email_white_24dp"
                        android:inputType="textEmailAddress"
                        android:textSize="13sp"
                        android:textColor="@color/textColor"
                        android:fontFamily="@font/heartwarming"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="Password"
                        android:textSize="13sp"
                        android:textColor="@color/textColor"
                        android:fontFamily="@font/heartwarming"/>

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:id="@+id/signUpPasswordEtId"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/gradient_edittext_background"
                        android:hint=" Enter a password"
                        android:drawableLeft="@drawable/ic_lock_white_24dp"
                        android:inputType="textPassword"
                        android:textSize="13sp"
                        android:textColor="@color/textColor"
                        android:fontFamily="@font/heartwarming"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="Confirm Password"
                        android:textSize="13sp"
                        android:textColor="@color/textColor"
                        android:fontFamily="@font/heartwarming"/>

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:id="@+id/signUpConfirmPasswordEtId"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/gradient_edittext_background"
                        android:hint=" Enter confirm password"
                        android:drawableLeft="@drawable/ic_lock_white_24dp"
                        android:inputType="textPassword"
                        android:textSize="13sp"
                        android:textColor="@color/textColor"
                        android:fontFamily="@font/heartwarming"/>

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/signUpSignUpBtnId"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="5dp"
                        android:background="@drawable/button_background"
                        android:text="Sign up"
                        android:textColor="@color/buttonTextColor"
                        android:textAllCaps="false"
                        android:fontFamily="@font/heartwarming"/>

                </LinearLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight=".5"
            android:text="Already have an account ?"
            android:textSize="13sp"
            android:textColor="@color/textColor"
            android:fontFamily="@font/heartwarming"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/signUpLoginTvId"
            android:gravity="center"
            android:layout_weight=".5"
            android:text="Login"
            android:textSize="13sp"
            android:textColor="@color/textColor"
            android:fontFamily="@font/heartwarming"/>

    </LinearLayout>

</RelativeLayout>